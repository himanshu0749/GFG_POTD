class Solution {
    public static void convertToWave(int n, int[] arr) {
        // code here
        for(int i=0;i < n-1;i+=2){
             if (i + 1 < n) {
                // Swap arr[i] and arr[i+1]
                int temp = arr[i];
                arr[i] = arr[i + 1];
                arr[i + 1] = temp;
            }
            //System.out.println(arr[i]+" ");
        }
    }
}
